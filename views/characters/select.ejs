<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Character</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #343a40; 
        }
        .list-group-item {
            background-color: #495057; 
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center text-white mb-4">Select Your Character</h1>
        <ul class="list-group">
            <% characters.forEach(character => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div class="text-white">
                        <strong>Name:</strong> <%= character.name %> |
                        <strong>Level:</strong> <%= character.level %> |
                        <strong>HP:</strong> <%= character.hp %>
                    </div>
                    <button class="btn btn-primary" onclick="selectCharacter('<%= character._id %>')">Select</button>
                </li>
            <% }) %>
        </ul>
    </div>

    <script>
        function selectCharacter(characterId) {
            fetch('/game/select', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ characterId: characterId }),
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                alert("Character selected: " + data.character.name);
                window.location.href = '/game'; 
            })
            .catch(error => {
                console.error('Error selecting character:', error);
                alert("There was an error selecting the character.");
            });
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
