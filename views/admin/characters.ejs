<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Characters List</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&family=UnifrakturMaguntia&display=swap" rel="stylesheet">
    
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            font-family: 'Cinzel', serif;
        }

        h1 {
            font-family: 'UnifrakturMaguntia', cursive;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);
            font-size: 3rem;
            text-align: center;
            margin-bottom: 2rem;
        }

        h3 {
            font-family: 'Cinzel', serif;
            color: #f0a500;
            text-shadow: 1px 1px 2px #000;
        }

        p {
            font-size: 1.1rem;
        }

        .card {
            background-color: rgba(0, 0, 0, 0.8);
            border: 1px solid #9b870c;
            border-radius: 8px;
            margin-bottom: 1.5rem;
        }

        .card-body {
            padding: 1.5rem;
        }

        a {
            color: #f8f9fa;
            text-decoration: none;
        }

        a:hover {
            color: #d4af37;
        }

        .btn-primary {
            background-color: #6c757d;
            border-color: #9b870c;
            color: #f8f9fa;
            font-size: 1.25rem;
            font-family: 'Cinzel', serif;
            transition: background-color 0.4s, box-shadow 0.4s;
        }

        .btn-primary:hover {
            background-color: #9b870c;
            box-shadow: 0 0 10px #f0a500, 0 0 20px #f0a500;
        }

        .container {
            background-color: rgba(18, 18, 18, 0.85);
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0px 0px 20px 5px rgba(0, 0, 0, 0.8);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>Character List</h1>

        <!-- Online Users Section -->
        <h2 class="text-warning">Online Users</h2>
        <div class="row">
            <% onlineUsers.forEach(user => { %>
                <div class="col-md-6">
                    <h3><%= user.username %></h3>
                    <div class="list-group">
                        <% user.characters.forEach(character => { %>
                            <div class="list-group-item">
                                <strong>Name:</strong> <%= character.name %> | 
                                <strong>Level:</strong> <%= character.level %> |
                                <strong>HP:</strong> <%= character.hp %> |
                                <a href="/characters/<%= character._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        </div>

        <!-- Offline Users Section -->
        <h2 class="text-warning mt-4">Offline Users</h2>
        <div class="row">
            <% offlineUsers.forEach(user => { %>
                <div class="col-md-6">
                    <h3><%= user.username %></h3>
                    <div class="list-group">
                        <% user.characters.forEach(character => { %>
                            <div class="list-group-item">
                                <strong>Name:</strong> <%= character.name %> | 
                                <strong>Level:</strong> <%= character.level %> |
                                <strong>HP:</strong> <%= character.hp %> |
                                <a href="/characters/<%= character._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                            </div>
                        <% }); %>
                    </div>
                </div>
            <% }); %>
        </div>

        <div class="text-center mt-4">
            <a href="/characters/create" class="btn btn-primary">Create New Character</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
